#!/bin/bash

HAB_PARENT_DIR="/opt/bin"

FILE_LIST='
backupHAB 
clear-creds
db-backupHAB 
event-rate
install-upnp 
install-jna 
oh-cpu 
oh-memory 
oh-mpstat
reinit 
restartHAB 
revert-start-levels 
set-start-levels 
startHAB 
stopHAB 
top-threads-cpu
updateHAB 
upgradeZWAVE 
versionHAB 
z-lookup 
z-threads 
z-update 
'

cd ${HAB_PARENT_DIR}

echo "Pulling files from repo"
for f in ${FILE_LIST}
do
	wget -N -q --show-progress https://raw.githubusercontent.com/mhilbush/openhab-tools/master/${f}
	chown mark:mark ${f}
	chmod 755 ${f}
done

cd /opt

echo "Done!"

