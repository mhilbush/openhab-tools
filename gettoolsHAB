#!/bin/bash

HAB_PARENT_DIR="/opt"

FILE_LIST="updateHAB backupHAB startHAB stopHAB restartHAB versionHAB \
            upgradeZWAVE db-backupHAB reinit z-threads z-update install-upnp \
            oh-cpu oh-memory"

cd ${HAB_PARENT_DIR}

echo "Pulling files from repo"
for f in ${FILE_LIST}
do
	wget -N -q --show-progress https://raw.githubusercontent.com/mhilbush/openhab-tools/master/${f}
	chown mark:mark ${f}
	chmod 755 ${f}
done

echo "Done!"

